@model IEnumerable<MVCHomework.Models.ViewModels.BookkeepingViewModels>

@{
    Layout = null;
    var Index = 0;
}

<div>
    <div class="row">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
            </thead>

            @foreach (var Item in Model)
            {
                Index++;
                <tr>
                    <td>
                        @Index.ToString()
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => Item.category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Item.date)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => Item.money)
                    </td>
                </tr>
            }


        </table>

    </div>
    <div>


    </div>
</div>